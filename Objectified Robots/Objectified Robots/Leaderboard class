class Player {
public:
	Player(int row, int col, char symbol);
	int getRow() const;
	int setRow(int playerX);
	int getCol() const;
	int setCol(int playerY);
	bool isAlive() const;
	void kill();
private:
	int playerX, playerY;
	bool alive;
};

int Player::getRow()const{
	return playerX; //position that the player should move to
}
int Player::setRow(int playerX){
	this->playerX = playerX;
}
int Player::getCol()const {
	return playerY; //position that the player should move to
}
int Player::setCol(int playerY) {
	this->playerY = playerY;
}
bool Player::isAlive()const{
	return alive;
}
void Player::kill() {
	alive = false;
}
